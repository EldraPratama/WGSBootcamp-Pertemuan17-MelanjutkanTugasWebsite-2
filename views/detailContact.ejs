<div class="container">
    <div class="row mt-4">
        <div class="col">            
            <h1>Detail Employee</h1>

            <div class="card border-primary " style="width: 20rem;">
                <div class="card-header text-bg-primary" ><svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                  <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                </svg></div>

                <% if (cont.image == null) { %>
                  <img src="../public/img/gambarPemandangan.jpg" class="card-img-top" alt="gambarPemandangan" width="300" height="200">
                <% }else{ %>
                  <img src="../public/upload/<%= cont.image %>" class="card-img-top" alt="gambarProfile" width="300" height="200">
                <% } %>

                <div class="card-body">
                  <h5 class="card-title"> <%= cont.name %> </h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= cont.phone %></h6>
                  <p class="card-text"><%= cont.nik %></p>
                  <a href="/employee" class="card-link d-block mt-3">&laquo Back to employee</a>
                </div>
            </div>

        </div>
    </div>
</div>